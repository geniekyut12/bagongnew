<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/recom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/homerecom"
            android:textColor="@color/grayG"
            android:textSize="24sp"
            android:fontFamily="@font/figtreebold"
            android:textStyle="bold" />


        <!-- Tabs -->

        <!-- Horizontal Scrollable Food List -->

        <!-- TabLayout -->

        <!-- ViewPager2 (Use ViewPager2 instead of ViewPager) -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/inprog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recom">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inprogress"
                tools:ignore="HardcodedText"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/done"
                tools:ignore="HardcodedText"/>

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/challenge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/inprog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="-1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Food Item 1 -->

                <!-- Food Item 2 -->
                <LinearLayout
                    android:id="@+id/fooditem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/eggtoast"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/timecal1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="138dp"
                        android:gravity="center"
                        android:text="@string/eggtoast"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/timerCaloriesLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/timecal1">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/homes" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/eggtstmins"
                            android:layout_marginTop="0dp"
                            android:importantForAccessibility="yes"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/metabolism" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="0dp"
                            android:text="@string/eggtstcal"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fooditem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/eggtoast"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_background"
                        android:src="@drawable/global_warming" />

                    <TextView
                        android:id="@+id/lunchh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pancakes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:id="@+id/timerCaloriesLayouts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lunchh">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/homes" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/mins"
                            android:layout_marginTop="0dp"
                            android:importantForAccessibility="yes"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/heart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="0dp"
                            android:text="@string/eggtstcal"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Data Insights -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/mgreen"
            android:textColor="@color/grayG"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/figtreebold"
            android:paddingTop="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/movedesc"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/figtree"/>

        <LinearLayout
            android:id="@+id/info_cards_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnTrackTrip">

            <!-- First Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus"
                        android:alpha="10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/did_you_know"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/figtreemed"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/businfo"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/figtree"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/buss"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="10dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bus"
                        android:alpha="10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/did_you_know"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/figtree"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/walkinfo"
                            android:layout_marginTop="10dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/figtree"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/walk"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="10dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Third Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="250dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cyclings"
                        android:alpha="10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/did_you_know"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/figtree"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/bikeinfo"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/cycling"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:fontFamily="@font/figtree"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Track My Trip Button -->
        <Button
            android:id="@+id/btnTrackTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/track_my_trip"
            android:background="@drawable/quizlayout2"
            android:textColor="@color/grayG"
            android:textStyle="bold"
            android:fontFamily="@font/figtreebold"
            android:paddingTop="-1dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/explore"
            android:textColor="@color/grayG"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/figtreebold"
            android:paddingTop="1dp" />


        <!-- Horizontal Scrollable Background with Text -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayoutSphere"
                    android:layout_width="250dp"
                    android:layout_height="166dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_image"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:onClick="onLinearLayoutClick">

                    <!-- FrameLayout to overlay TextView on ImageView -->
                    <FrameLayout
                        android:layout_width="350dp"
                        android:layout_height="186dp">

                        <!-- Image in the background -->
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sphere" />

                        <!-- Text over the Image with a semi-transparent background -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sphere"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingTop="70dp"
                            android:shadowColor="#80000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                        <!-- Subtitle: Description Below the Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/spheretxts"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingTop="90dp"
                            android:maxLines="3"
                            android:shadowColor="#80000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>
                    </FrameLayout>

                </LinearLayout>
                <!-- Background 2 -->

                <LinearLayout
                    android:id="@+id/linearLayoutIce"
                    android:layout_width="250dp"
                    android:layout_height="166dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:onClick="onLinearLayoutClick">

                    <!-- FrameLayout to overlay TextView on ImageView -->
                    <FrameLayout
                        android:layout_width="400dp"
                        android:layout_height="186dp">

                        <!-- Image in the background -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ice" />

                        <!-- Text over the Image with a semi-transparent background -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ice"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingTop="40dp"
                            android:shadowColor="#80000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                        <!-- Subtitle: Description Below the Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/icetxts"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingTop="90dp"
                            android:maxLines="3"
                            android:shadowColor="#80000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutWeather"
                    android:layout_width="250dp"
                    android:layout_height="166dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:onClick="onLinearLayoutClick">

                    <!-- FrameLayout to overlay TextView on ImageView -->
                    <FrameLayout
                        android:layout_width="400dp"
                        android:layout_height="186dp">

                        <!-- Image in the background -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/weather" />

                        <!-- Text over the Image with a semi-transparent background -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/weather"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:shadowColor="#80000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                        <!-- Subtitle: Description Below the Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/weathertxts"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:paddingTop="70dp"
                            android:maxLines="3"
                            android:shadowColor="#80000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutExp"
                    android:layout_width="250dp"
                    android:layout_height="166dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:onClick="onLinearLayoutClick">

                    <!-- FrameLayout to overlay TextView on ImageView -->
                    <FrameLayout
                        android:layout_width="400dp"
                        android:layout_height="186dp">

                        <!-- Image in the background -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/arrheniuss" />

                        <!-- Text over the Image with a semi-transparent background -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/arrheniuss"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingTop="40dp"
                            android:shadowColor="#80000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                        <!-- Subtitle: Description Below the Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/arrheniustxts"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:paddingTop="90dp"
                            android:maxLines="3"
                            android:shadowColor="#80000000"
                            android:shadowRadius="4"
                            android:shadowDx="2"
                            android:shadowDy="2"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutJar"
