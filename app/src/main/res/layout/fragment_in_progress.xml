<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/bfast1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/eggtoast"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/timecal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="138dp"
                android:gravity="center"
                android:text="@string/eggtoast"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/timerCaloriesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timecal1">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/homes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/eggtstmins"
                    android:layout_marginTop="0dp"
                    android:importantForAccessibility="yes"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/metabolism" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/eggtstcal"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Food Item 2 -->

        <LinearLayout
            android:id="@+id/bfast2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/eggtoast"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:src="@drawable/global_warming" />

            <TextView
                android:id="@+id/lunchh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pancakes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/timerCaloriesLayouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lunchh">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/homes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/mins"
                    android:layout_marginTop="0dp"
                    android:importantForAccessibility="yes"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/heart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/eggtstcal"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>


        <!-- Challenge Card 1 -->
        <LinearLayout
            android:id="@+id/challengeCard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvChallengeTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvChallengeDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day1text"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnStartChallenge1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:backgroundTint="@color/BrightGreen"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- Challenge Card 2 -->
        <LinearLayout
            android:id="@+id/challengeCard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvChallengeTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvChallengeDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day2text"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnStartChallenge2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:backgroundTint="@color/BrightGreen"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- Challenge Card 3 -->
        <LinearLayout
            android:id="@+id/challengeCard3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvChallengeTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvChallengeDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day3text"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnStartChallenge3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:backgroundTint="@color/BrightGreen"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- Challenge Card 4 -->
        <LinearLayout
            android:id="@+id/challengeCard4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvChallengeTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvChallengeDescription4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day4text"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnStartChallenge4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:backgroundTint="@color/BrightGreen"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- Challenge Card 5 -->
        <LinearLayout
            android:id="@+id/challengeCard5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvChallengeTitle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvChallengeDescription5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day5text"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnStartChallenge5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:backgroundTint="@color/BrightGreen"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
