<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gamebg">


    <LinearLayout
        android:id="@+id/quizzes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- back button -->

        <LinearLayout
            android:id="@+id/backb"
            android:layout_width="424dp"
            android:layout_height="124dp"
            android:layout_marginEnd="12dp"
            android:background="@color/gamebg"
            android:elevation="4dp"
            android:onClick="onRectangleClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="50dp"
                android:contentDescription="@string/back"
                android:src="@drawable/back"
                app:tint="@color/Brown"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="29dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/afacad"
                android:text="@string/quiz"
                android:textColor="@color/Brown"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- QUIZ 1 -->
        <LinearLayout
            android:id="@+id/quiz1"
            android:layout_width="310dp"
            android:layout_height="170dp"
            android:layout_marginTop="39dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mquizbg"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/quiz"
                android:src="@drawable/quiz" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:text="@string/foodprint"
                    android:textColor="@color/Brown"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:text="@string/qz1desc"
                    android:textColor="@color/Green"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnstartqz1"
                    android:layout_width="109dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btnquiz"
                    android:text="@string/startq"
                    android:textColor="@color/LTGreen"
                    android:fontFamily="@font/afacad"/>
            </LinearLayout>
        </LinearLayout>

        <!-- QUIZ 2 -->
        <LinearLayout
            android:id="@+id/quiz2"
            android:layout_width="310dp"
            android:layout_height="170dp"
            android:layout_marginTop="29dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mquizbg"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/quiz"
                android:src="@drawable/quiz" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:text="@string/qz2title"
                    android:textColor="@color/Brown"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:text="@string/qz2desc"
                    android:textColor="@color/Green"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnstartqz2"
                    android:layout_width="109dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btnquiz"
                    android:text="@string/startq"
                    android:textColor="@color/LTGreen"
                    android:fontFamily="@font/afacad"/>
            </LinearLayout>
        </LinearLayout>

        <!-- QUIZ 3 -->
        <LinearLayout
            android:id="@+id/quiz3"
            android:layout_width="310dp"
            android:layout_height="170dp"
            android:layout_marginTop="29dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mquizbg"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/quiz"
                android:src="@drawable/quiz" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:text="@string/qz3title"
                    android:textColor="@color/Brown"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/afacad"
                    android:text="@string/qz3desc"
                    android:textColor="@color/Green"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnstartqz3"
                    android:layout_width="109dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btnquiz"
                    android:text="@string/startq"
                    android:textColor="@color/LTGreen"
                    android:fontFamily="@font/afacad"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>